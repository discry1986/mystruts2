<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="mobile">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>xml所有方法方式：手机号码不能为空</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regex"><![CDATA[^1[34578]\d{9}$]]></param>
            <message>xml所有方法方式：手机号码格式不正确</message>
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <message>xml所有方法方式：邮箱不能为空</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regex"><![CDATA[^[a-zA-Z0-9_-]+@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$]]></param>
            <message>xml所有方法方式：邮箱格式不正确</message>
        </field-validator>
    </field>
</validators>